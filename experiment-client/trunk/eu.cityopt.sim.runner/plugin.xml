<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="eu.cityopt.sim.runner.application"
         name="Runner application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="false">
         <run
               class="eu.cityopt.sim.runner.SimRunner">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="eu.cityopt.sim.runner.application"
            name="Simulation runner">
         <property
               name="appName"
               value="Simulation runner">
         </property>
      </product>
   </extension>

</plugin>
